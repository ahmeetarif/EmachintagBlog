@model RegisterViewModel
@{
    ViewData["Title"] = "Kaydol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12">
    <section class="contact two-column-inside white-box">

        <div class="get-in-touch">
            <h2>Kaydol</h2>
            <form action="@Url.Action("Register", "Authentication")" method="post" data-ajax="true" data-ajax-method="POST">

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="text" placeholder="Adınız" asp-for="FullName">
                    <span class="text-muted" asp-validation-for="FullName"></span>
                </div>

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="text" placeholder="Kullanıcı adı" asp-for="UserName">
                    <span class="text-muted" asp-validation-for="UserName"></span>
                </div>

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="email" placeholder="Email" asp-for="Email">
                    <span class="text-muted" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="password" placeholder="Şifre" asp-for="Password">
                    <span class="text-muted" asp-validation-for="Password"></span>
                </div>

                <br />
                <button type="submit" class="btn"><i class="pe-7s-paper-plane"></i> Kaydol</button>
            </form>
        </div>
    </section>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<partial name="../Shared/Partials/_ValidationScriptsPartial.cshtml" />