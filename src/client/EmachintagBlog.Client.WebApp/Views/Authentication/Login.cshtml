@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12">
    <section class="contact two-column-inside white-box">

        <div class="get-in-touch">
            <h2>Giriş Yap</h2>

            <div>
                @if (ViewBag.Error != null)
                {
                    <span>@ViewBag.Error</span>
                }
            </div>

            <form action="@Url.Action("Login", "Authentication")" method="post" data-ajax="true" data-ajax-method="POST">

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="email" placeholder="Email" asp-for="Email">
                    <span class="text-muted" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <input class="col-xs-12 form-control" type="password" placeholder="Şifre" asp-for="Password">
                    <span class="text-muted" asp-validation-for="Password"></span>
                </div>

                <br />
                <button type="submit" class="btn"><i class="pe-7s-paper-plane"></i> Giriş Yap</button>
            </form>
        </div>
    </section>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<partial name="../Shared/Partials/_ValidationScriptsPartial.cshtml" />