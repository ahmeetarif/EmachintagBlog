@model About
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container-fluid">

    <h2>Silmek istediğinize emin misiniz?</h2>
    <div>
        <form action="@Url.Action("DeleteConfirmed", "About", new { id = Model.Id })" method="post">

            <hr />
            <div class="container-fluid">

                <div class="form-group">
                    <h5>İsim</h5>
                    <label>@Model.FullName</label>
                </div>

                <div class="form-group">
                    <h5>Mesaj</h5>
                    <label>@Model.Message</label>
                </div>

                <div class="form-group">
                    <h5>Email</h5>
                    <label>@Model.Email</label>
                </div>

                <div class="form-group">
                    <h5>Telefon</h5>
                    <label>@Model.PhoneNumber</label>
                </div>

                <div class="form-group">
                    <h5>Adres</h5>
                    <label>@Model.Address</label>
                </div>

                <div class="form-group">
                    <h5>Instagram</h5>
                    <label>@Model.InstagramLink</label>
                </div>

                <div class="form-group">
                    <h5>Facebook</h5>
                    <label>@Model.FacebookLink</label>
                </div>

                <div class="form-group">
                    <h5>Twitter</h5>
                    <label>@Model.TwitterLink</label>
                </div>

            </div>

            <div class="form-group">
                <div class="row">

                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary btn-user btn-block">Sil</button>
                    </div>

                    <div class="col-md-6">
                        <a href="@Url.Action("Index", "About")" class="btn btn-secondary btn-user btn-block">Vazgeç</a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

