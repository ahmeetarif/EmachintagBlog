@model About

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container-fluid">
    <form action="@Url.Action("Edit", "About")" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <div class="form-group">
                <img src="~/Images/Abouts/@Model.ImagePath" class="col-sm-4 img-thumbnail" />
                <label>Resmi Değiştir : </label>
                <input type="file" name="formFile" />
                <input type="hidden" asp-for="@Model.ImagePath" />
            </div>

            <div class="form-group">
                <label>İsim</label>
                <input type="text" class="form-control form-control-user" placeholder="isim gir..." asp-for="FullName">
            </div>

            <div class="form-group">
                <label>Kısa Mesaj</label>
                <input type="text" class="form-control form-control-user" placeholder="Email gir..." asp-for="Message">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control form-control-user" placeholder="Email gir..." asp-for="Email">
            </div>

            <div class="form-group">
                <label>Telefon</label>
                <input type="text" class="form-control form-control-user" placeholder="Telefon Numarası gir..." asp-for="PhoneNumber">
            </div>

            <div class="form-group">
                <label>Adres</label>
                <input type="text" class="form-control form-control-user" placeholder="Adres gir..." asp-for="Address">
            </div>

            <div class="form-group">
                <label>Instagram</label>
                <input type="text" class="form-control form-control-user" placeholder="Instagram gir..." asp-for="InstagramLink">
            </div>

            <div class="form-group">
                <label>Twitter</label>
                <input type="text" class="form-control form-control-user" placeholder="Twitter gir..." asp-for="TwitterLink">
            </div>

            <div class="form-group">
                <label>Facebook</label>
                <input type="text" class="form-control form-control-user" placeholder="Facebook gir..." asp-for="FacebookLink">
            </div>

            <input type="hidden" asp-for="Id" />
        </div>

        <div class="form-group">

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-user btn-block">Güncelle</button>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "About")" class="btn btn-secondary btn-user btn-block">Vazgeç</a>
                </div>
            </div>
        </div>
    </form>
</div>