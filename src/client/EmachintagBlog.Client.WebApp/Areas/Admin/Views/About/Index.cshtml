@model About

@{
    ViewData["Title"] = "Hakkında";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hakkında</h1>
        @if (Model == null)
        {
            <a href="@Url.Action("Create", "About")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">EKLE</a>
        }
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                    @if (Model != null)
                    {
                        <div class="form-group">

                            <div class="form-group">
                                <img src="~/Images/Abouts/@Model.ImagePath" class="col-sm-4 img-thumbnail" />
                                <input type="hidden" asp-for="@Model.ImagePath" />
                            </div>

                            <div class="form-group">
                                <label>İsim</label>
                                <input type="text" class="form-control form-control-user" placeholder="isim gir..." asp-for="FullName" readonly>
                            </div>

                            <div class="form-group">
                                <label>Kısa Mesaj</label>
                                <textarea type="text" class="form-control form-control-user" placeholder="Mesaj gir..." asp-for="Message" readonly></textarea>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control form-control-user" placeholder="Email gir..." asp-for="Email" readonly>
                            </div>

                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="text" class="form-control form-control-user" placeholder="Telefon Numarası gir..." asp-for="PhoneNumber" readonly>
                            </div>

                            <div class="form-group">
                                <label>Adres</label>
                                <input type="text" class="form-control form-control-user" placeholder="Adres gir..." asp-for="Address" readonly>
                            </div>

                            <div class="form-group">
                                <label>Instagram</label>
                                <input type="text" class="form-control form-control-user" placeholder="Instagram gir..." asp-for="InstagramLink" readonly>
                            </div>

                            <div class="form-group">
                                <label>Twitter</label>
                                <input type="text" class="form-control form-control-user" placeholder="Twitter gir..." asp-for="TwitterLink" readonly>
                            </div>

                            <div class="form-group">
                                <label>Facebook</label>
                                <input type="text" class="form-control form-control-user" placeholder="Facebook gir..." asp-for="FacebookLink" readonly>
                            </div>

                            <hr />

                            <div class="form-group container-fluid">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="@Url.Action("Edit", "About", new { id = Model.Id })" class="btn btn-primary btn-user btn-block">Düzenle</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="@Url.Action("Delete", "About", new { id = Model.Id })" class="btn btn-secondary btn-user btn-block">Sil</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h3 class="center">Lütfen bir hakkında oluşturunuz!</h3>
                    }

                </div>
            </div>
        </div>
    </div>

</div>